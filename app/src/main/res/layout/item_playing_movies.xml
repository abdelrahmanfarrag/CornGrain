<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:animateLayoutChanges="true"
    android:background="@android:color/transparent">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/playing_movies_img"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:contentDescription="@null"
            android:scaleType="fitXY" />


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/playing_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/cairo_semibold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/image_container"
        app:layout_constraintStart_toStartOf="@+id/image_container"
        app:layout_constraintTop_toBottomOf="@+id/image_container"
        tools:ignore="SmallSp" />

    <RatingBar
        android:id="@+id/playing_movie_rating"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:numStars="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/playing_movie_title"
        app:layout_constraintTop_toBottomOf="@+id/playing_movie_title" />

    <TextView
        android:id="@+id/reviews_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/cairo_semibold"
        android:textAlignment="viewStart"
        android:textColor="#CAD4DB"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/playing_movie_rating"
        app:layout_constraintStart_toEndOf="@+id/playing_movie_rating"
        app:layout_constraintTop_toTopOf="@+id/playing_movie_rating"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>

